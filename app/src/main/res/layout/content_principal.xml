<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="grupo8.altafidelidadipo.Principal"
    tools:showIn="@layout/activity_principal"
    android:gravity="center">

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/btRiego"
        android:src="@drawable/regadera"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/btTermostato"
        android:src="@drawable/termostato"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/btVentilacion"
        android:src="@drawable/ventilacion"
        android:layout_below="@id/btRiego"
        android:layout_alignParentLeft="true"
        android:scaleType="fitCenter" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:id="@+id/btIluminacion"
        android:src="@drawable/bombilla"
        android:layout_below="@id/btTermostato"
        android:layout_alignParentRight="true"
        android:scaleType="fitCenter" />
</RelativeLayout>
